<config>

  <!-- a single rule for handling all GET and POST requests -->
  <rule>
    <or>
      <equal>
        <variable name="method"/>
        <string value="GET"/>
      </equal>
      <equal>
        <variable name="method"/>
        <string value="POST"/>
      </equal>
    </or>
  </rule>
  
</config>