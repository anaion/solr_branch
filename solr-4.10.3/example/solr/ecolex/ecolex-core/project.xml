<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id$ -->

<project>
  <pomVersion>3</pomVersion>
  <extend>${ecolexCommon}/project.xml</extend>
  <!-- project info -->

  <groupId>ecolex</groupId>
  <id>ecolex-core</id>
  <currentVersion>${versions.ecolex}</currentVersion>
  <name>ecolex Core</name>
  <shortDescription>Description of the ecolex system</shortDescription>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.rng</include>
          <include>**/*.sql</include>
        </includes>
      </resource>
    </resources>
    <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>src/test/java</directory>
          <includes>
            <include>**/*.rng</include>
            <include>**/*.sql</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>
  <dependencies>

    <dependency>
      <groupId>objectledge</groupId>
      <artifactId>ledge-web</artifactId>
      <version>SNAPSHOT</version>
      <url>http://objectledge.org</url>
    </dependency>
    <dependency>
      <groupId>dna</groupId>
      <artifactId>dna-api</artifactId>
      <version>1.1-rc2</version>
      <url>http://dna.codehaus.org</url>
    </dependency>

    <dependency>
      <groupId>commons-pool</groupId>
      <artifactId>commons-pool</artifactId>
      <version>1.1</version>
      <url>http://jakarta.apache.org./commons/pool</url>
    </dependency>
    <dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
      <version>3.0</version>
      <url>http://jakarta.apache.org./commons/collections</url>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.3</version>
    </dependency>

    <dependency>
      <groupId>objectledge</groupId>
      <artifactId>ledge-components</artifactId>
      <version>SNAPSHOT</version>
      <url>http://objectledge.org/modules/ledge-components/</url>
    </dependency>

    <dependency>
      <groupId>faolex</groupId>
      <artifactId>faolex-core</artifactId>
      <version>SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>amisme</groupId>
      <artifactId>amisme-components</artifactId>
      <version>SNAPSHOT</version>
    </dependency>
    <dependency>
      <id>commons-httpclient</id>
      <version>3.0</version>
      <url>http://jakarta.apache.org/commons/httpclient/</url>
    </dependency>
    <dependency>
      <groupId>lucene</groupId>
      <artifactId>lucene-core</artifactId>
      <version>2.1.0</version>
      <url>http://lucene.apache.org/java/docs/index.html</url>
    </dependency>
    <dependency>
      <groupId>xpp3</groupId>
      <artifactId>xpp3</artifactId>
      <version>1.1.4c</version>
      <url>http://www.extreme.indiana.edu/xgws/xsoap/xpp/mxp1</url>
    </dependency>
    <dependency>
      <groupId>solr</groupId>
      <artifactId>apache-solr</artifactId>
      <version>1.2.0</version>
      <url>http://lucene.apache.org/solr/</url>
    </dependency>
    <dependency>
      <groupId>icu4j</groupId>
      <artifactId>icu4j</artifactId>
      <version>3.4.2</version>
      <url>http://icu.sourceforge.net/</url>
    </dependency>

  </dependencies>
</project>
